{% use "bootstrap_3_layout.html.twig" %}

{# Widgets #}

{% block icontext_widget -%}
	<div class="input-group">
		<span class="input-group-addon"><i class="{{ icon }}"></i></span>
	 	{{ block('form_widget') }}
	</div>
{%- endblock icontext_widget %}

{% block select2_widget -%}
	{% set attr = attr|merge({class: (attr.class|default('') ~ ' select2')|trim}) %}
	{{ block('choice_widget') }}
{%- endblock select2_widget %}

{% block selectpicker_widget -%}
	{% set attr = attr|merge({class: (attr.class|default('') ~ ' selectpicker')|trim}) %}
	{{ block('choice_widget') }}
{%- endblock selectpicker_widget %}

{%- block submitems_widget -%}
	{% set attr = attr|merge({class: (attr.class|default('') ~ ' btn')|trim}) %}
    {%- if label is empty -%}
        {%- if label_format is not empty -%}
            {% set label = label_format|replace({
                '%name%': name,
                '%id%': id,
            }) %}
        {%- else -%}
            {% set label = name|humanize %}
        {%- endif -%}
    {%- endif -%}
    <button type="{{ type|default('submit') }}" {{ block('button_attributes') }}>
    	{%- if icon -%}
			<span class="{{ icon }}"></span>&nbsp;
		{% endif %}
		{{ translation_domain is same as(false) ? label : label|trans({}, translation_domain) }}
  	</button>
{%- endblock submitems_widget -%}


{# Labels #}
{% block container_label -%}
	{% if data.fieldType.label  %}
		<div class="panel-heading">
			<h3 class="panel-title">
				{% if data.fieldType.editOptionsArray.icon is defined %}<i class="{{ data.fieldType.editOptionsArray.icon }}"></i>&nbsp;{% endif %}
				{{ data.fieldType.label }}
			</h3>
		</div>
	{% endif %}
{%- endblock container_label %}

{# Rows #}
{% block bouttongroup_row -%}
<div class="btn-group">
	{% for button in buttons %}
		<a class="btn btn-sm btn-primary" href="/meta/environment/switch/39"> <span
			class="fa fa-share-square-o"></span>&nbsp; Switch</a>
			
            {{- form_row(button) -}}
		
	{% endfor %}
</div>
{%- endblock bouttongroup_row %}


{% block container_row -%}

	<div class="panel panel-default">
{# 	  <div class="panel-heading">#}
	  	{{- form_label(form) -}}
{# 	  </div>#}
	  <div class="panel-body">
	    {{- form_widget(form) -}}
	  </div>
	  {{- form_errors(form) -}}
	</div>       
        
{%- endblock container_row %}



{% block fieldTypeType_row -%}
	{% if form.vars.data.children|length > 0 %}
		<div class="panel panel-default" >
		  <div class="panel-heading">
			<strong>{{ form.vars.data.name }}</strong> <small>{{ form.vars.data.type }}</small>
		  </div>
		  <div class="panel-body">
		  	<ul class="list-group">
				{{- form_widget(form) -}}
			</ul>
		  </div>	
		  {{- form_errors(form) -}}
		</div>       
	{% else %}
		<li class="list-group-item">
			<div><strong>{{ form.vars.data.name }}</strong> <small>{{ form.vars.data.type }}</small></div>				
			{{- form_widget(form) -}}
			{{- form_errors(form) -}}
		</li>
	{% endif %}
  	
        
{%- endblock fieldTypeType_row %}

