{% extends 'base.html.twig' %}

{% block title %}List all content types{% endblock %}
{% block pagetitle %}List all content types{% endblock %} 


{% block body %}
<div class="row">
	<div class="col-md-12">
		<div class="box ">
			<div class="box-header with-border">
				<i class="fa fa-sitemap"></i>
				<h3 class="box-title">Content types</h3>
				<div class="btn-group  pull-right">
					<a class="btn btn-xs btn-primary" href="{{ url('contenttype.add') }}"><i class="fa fa-plus"></i> Add content type</a>
					<a class="btn btn-xs btn-primary" href="{{ url('contenttype.unreferenced') }}"><i class="fa fa-plus"></i> Add referenced</a>
				</div>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<table class="table table-condensed table-striped">
					<tbody>
						<tr>
							<th class="text-center" style="width: 10px">#</th>
							<th class="text-center" style="width: 20px">Icon</th>
							<th>Name</th>
							<th>Plural</th>
							<th>Draft Environment</th>
							<th class="text-center" style="width: 30px">Dirty</th>
							<th class="text-center" style="width: 30px">Active</th>
							<th>Action</th>
						</tr>
						{% for contentType in contentTypes %}
							<tr class="text-{{ contentType.color }}">
								<td class="text-center">{{ loop.index }}.</td>
								<td class="text-center"><i class="{% if contentType.icon %}{{ contentType.icon }}{% else %}fa fa-book{% endif %}"></i></td>
								<td>{{ contentType.name|humanize }}</td>
								<td>{{ contentType.pluralName|humanize }}</td>
								<td>{{ contentType.environment.name|humanize }}</td>
								<td class="text-center">{% if contentType.dirty %}<i class="fa fa-warning"></i>{% endif %}</td>
								<td class="text-center">{% if contentType.active %}<i class="fa fa-check"></i>{% endif %}</td>
								<td>
								
									<div class="btn-group">
										{% include 'elements/get-button.html.twig' with {
											'url':  path('contenttype.edit', {'id': contentType.id}),
											'label': 'Edit',
											'icon': 'pencil'
										}%}
					                    {% include 'elements/get-button.html.twig' with {
					                      'url': path('contenttype.export', {'contentType': contentType.id}),
					                      'label': 'Export',
					                      'icon': 'sign-out',
					                      'target': '_blank'
					                    }%}
										{% include 'elements/get-button.html.twig' with {
											'url': path('template.index', {'type': contentType.name}),
											'label': 'Templates',
											'icon': 'file-text-o'
										}%}
					                    {% include 'elements/get-button.html.twig' with {
					                      'url': path('view.index', {'type': contentType.name}),
					                      'label': 'Views',
					                      'icon': 'tv'
					                    }%}
										{% if contentType.environment.managed %}
											{% include 'elements/post-button.html.twig' with {
												'url':  path('contenttype.refreshmapping', {'id': contentType.id}),
												'message': 'Try to update the ' ~ contentType.name|humanize ~ ' mapping ?',
												'label': 'Update mapping',
												'icon': 'refresh'
											}%}
										{% endif %}
										{% if not contentType.active %}
											{% include 'elements/post-button.html.twig' with {
												'url':  path('contenttype.activate', {'id': contentType.id}),
												'message': 'Are you ready to activate ' ~ contentType.name|humanize ~ ' ?',
												'label': 'Activate',
												'icon': 'warning'
											}%}
										{% endif %}
										{% include 'elements/post-button.html.twig' with {
											'url': path('contenttype.remove', {'id': contentType.id}),
											'message': 'Delete the content type ' ~ contentType.name|humanize ~ ' ?',
											'label': 'Delete',
											'icon': 'trash'
										}%}
				                    </div>
								
              
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

			</div>
			<!-- /.box-body -->
		</div>
	</div>
</div>
{% endblock %} 


{% block javascripts %}
	{% include 'app/menu.html.twig' with {
		'item':  'contenttype-list'
	}%}
{% endblock %}	
