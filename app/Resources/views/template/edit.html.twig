{% extends 'base.html.twig' %}

{% block title %}Edit template {{ template.name }} for {{template.contentType.name}}{% endblock %}
{% block pagetitle %}Edit template {{ template.name }} for {{template.contentType.name}}{% endblock %} 
{% block subtitle %}{% endblock %} 


{% block body %}

<div class="row">
	<div class="col-md-12">
		<!-- general form elements -->
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">Edit template for {{template.contentType.name}}</h3>
			</div>
			<!-- /.box-header -->
			<!-- form start -->
			{{ form_start(form) }}
				{% form_theme form 'form/fields.html.twig' %}
				
				<div class="box-body">
					{{ form_row(form.name) }}
					{{ form_row(form.icon) }}
					{{ form_row(form.body) }}
					{{ form_row(form.editWithWysiwyg) }}
					{{ form_row(form.externalLink) }}

				</div>
				<!-- /.box-body -->
				<div class="box-footer">
					{{ form_widget(form.save) }}
				</div>
			{{ form_end(form) }}

		</div>
		<!-- /.box -->
	</div>
</div>

{% endblock %} 


{% block javascripts %}
	{% include 'app/menu.html.twig' with {
		'item':  'contenttype-index'
	}%}
{% endblock %}	