{% extends 'base.html.twig' %} {% block title %} I18n {%endblock %} {%
block pagetitle %} I18n {% endblock %} {% block body %}
<div class="box">
	<div class="box-body">
		<table>
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ i18n.id }}</td>
				</tr>
				<tr>
					<th>Created</th>
					<td>{% if i18n.created %}{{ i18n.created|date('Y-m-d H:i:s')
						}}{% endif %}</td>
				</tr>
				<tr>
					<th>Modified</th>
					<td>{% if i18n.modified %}{{ i18n.modified|date('Y-m-d H:i:s')
						}}{% endif %}</td>
				</tr>
				<tr>
					<th>Key</th>
					<td>{{ i18n.identifier }}</td>
				</tr>
				<tr>
					<th>Content</th>
					<table class="table table-condensed table-striped">
						<tbody>
							<tr>
								<th>Locale</th>
								<th>Text</th>
							</tr>
							{% for translation in i18n.content %}
							<tr>
								<td>{{ translation.locale }}</td>
								<td>{{ translation.text }}</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
			</tr>
			</tbody>
		</table>
	</div>
	<div class="box-footer with-border">
		<div class="btn-group">

			<a class="btn btn-primary"
				href="{{ path('i18n_edit', { 'id': i18n.id }) }}">Edit</a> <a
				class="btn btn-primary" href="{{ path('i18n_new') }}">Create a
				new entry</a> <a class="btn btn-primary" href="{{ path('i18n_index') }}">Back
				to the list</a>
		</div>

	</div>
</div>
{{ form_start(delete_form) }}
<input class="btn btn-danger" type="submit" value="Delete">
{{ form_end(delete_form) }} {% endblock %}
