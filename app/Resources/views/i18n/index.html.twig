{% extends 'base.html.twig' %} {% block title %} I18n list {%endblock %}
{% block pagetitle %} I18n list {% endblock %} {% block body %}
<div class="row">
		<div class="box ">
			<div class="box-header with-border">
				<i class="fa fa-file-text-o"></i>
				<h3 class="box-title">List of keys</h3>
				{% include 'elements/pagination.html.twig' with { 'lastPage':
				lastPage, 'currentPage': page, 'currentFilters': app.request.query,
				'paginationPath': paginationPath, 'showAlwaysFirstAndLast': false }
				%}

				<div class="box-body">
					<table class="table table-condensed table-striped">
						<tbody>
							<tr>
							    <th>Id</th>
								<th>Key</th>
								<th>Numbers of translation</th>
								<th>Actions</th>
							</tr>
						</tbody>
						<tbody>
							{% for key, i18n in i18nkeys %}
							<tr> 
								<td><a href="{{ path('i18n_show', { 'id': i18n.i18n.id }) }}">{{ i18n.i18n.id }}</a></td>
								<td class="">{{ key }}</td>
								<td><a data-toggle="modal"
									data-target="#{{ i18n.id_key }}Modal">{{
										i18n.i18n.content|length }}</a></td>
								<td>
									<div class="btn-group">
										<a class="btn btn-primary"
											href="{{ path('i18n_edit', { 'id': i18n.i18n.id }) }}">edit</a>
										<a class="btn btn-danger" href="{{ path('i18n_delete', { 'id': i18n.i18n.id }) }}"><i class="fa fa-trash"></i></a>
									</div>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>

				<div class="box-footer with-border">
					<a class="btn btn-primary" href="{{ path('i18n_new') }}">Create
						a new entry</a> {% include 'elements/pagination.html.twig' with {
					'lastPage': lastPage, 'currentPage': page, 'currentFilters':
					app.request.query, 'paginationPath': paginationPath,
					'showAlwaysFirstAndLast': false } %}
				</div>
			</div>
		</div>

		{% for key, i18n in i18nkeys %}
		<!-- Modal -->
		<div class="modal fade" id="{{ i18n.id_key }}Modal" tabindex="-1"
			role="dialog" aria-labelledby="{{ i18n.id_key }}ModalLabel">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal"
							aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
						<h4 class="modal-title" id="{{ i18n.id_key }}ModalLabel">{{
							key }} translations</h4>
					</div>
					<div class="modal-body">
						<table class="table table-condensed table-striped">
							<tbody>
								<tr>
									<th>Locale</th>
									<th>Text</th>
								</tr>
								{% for translation in i18n.i18n.content %}
								<tr>
									<td>{{ translation.locale }}</td>
									<td>{{ translation.text }}</td>
								</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
{% endblock %}
