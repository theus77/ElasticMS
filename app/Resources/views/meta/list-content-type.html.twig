{% extends 'base.html.twig' %}

{% block title %}List all content types{% endblock %}
{% block pagetitle %}List all content types{% endblock %} 


{% block body %}
<div class="row">
	<div class="col-md-12">
		<div class="box ">
			<div class="box-header with-border">
				<i class="fa fa-sitemap"></i>
				<h3 class="box-title">Content types</h3>
				<a class="btn btn-xs btn-primary pull-right" href="{{ url('contenttype.add') }}"><i class="fa fa-plus"></i> Add content type</a>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<table class="table table-condensed table-striped">
					<tbody>
						<tr>
							<th class="text-center" style="width: 10px">#</th>
							<th class="text-center" style="width: 20px">Icon</th>
							<th>Name</th>
							<th>Plural</th>
							<th>Draft Environment</th>
							<th class="text-center" style="width: 30px">Active</th>
							<th>Action</th>
						</tr>
						{% for contentType in contentTypes %}
							<tr class="text-{{ contentType.color }}">
								<td class="text-center">{{ loop.index }}.</td>
								<td class="text-center"><i class="{% if contentType.icon %}{{ contentType.icon }}{% else %}fa fa-book{% endif %}"></i></td>
								<td>{{ contentType.name|humanize }}</td>
								<td>{{ contentType.pluralName|humanize }}</td>
								<td>{{ contentType.environment.name|humanize }}</td>
								<td class="text-center">{% if contentType.active %}<i class="fa fa-check"></i>{% endif %}</td>
								<td>
								
									<div class="btn-group">
										{% include 'elements/get-button.html.twig' with {
											'url':  path('contenttype.edit', {'id': contentType.id}),
											'label': 'Edit',
											'icon': 'pencil'
										}%}
										{% include 'elements/post-button.html.twig' with {
											'url': path('contenttype.delete', {'id': contentType.id}),
											'message': 'Delete the content type ' ~ contentType.name|humanize ~ ' ?',
											'label': 'Delete',
											'icon': 'trash'
										}%}
				                    </div>
								
              
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

			</div>
			<!-- /.box-body -->
		</div>
	</div>
</div>
{% endblock %} 


{% block javascripts %}
	{% include 'app/menu.html.twig' with {
		'item':  'contenttype-list'
	}%}
{% endblock %}	
