{% extends 'base.html.twig' %}

{% block title %}List all content types{% endblock %}
{% block pagetitle %}List all content types{% endblock %} 
{% block subtitle %}{% endblock %} 


{% block body %}
<div class="row">
	<div class="col-md-12">
		<div class="box ">
			<div class="box-header with-border">
				<i class="fa fa-sitemap"></i>
				<h3 class="box-title">Content types</h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<table class="table table-condensed">
					<tbody>
						<tr>
							<th style="width: 10px">#</th>
							<th style="width: 20px">Icon</th>
							<th>Name</th>
							<th>Plural</th>
							<th>Default Environment</th>
							<th style="width: 30px">Active</th>
							<th>Action</th>
						</tr>
						{% for contentType in contentTypes %}
							<tr class="text-{{ contentType.color }}">
								<td>{{ loop.index }}.</td>
								<td><i class="{% if contentType.icon %}{{ contentType.icon }}{% else %}fa fa-book{% endif %}"></i></td>
								<td>{{ contentType.name }}</td>
								<td>{{ contentType.pluralName }}</td>
								<td>{{ contentType.alias }}</td>
								<td>{% if contentType.active %}<i class="fa fa-check"></i>{% endif %}</td>
								<td>
								
									<div class="btn-group">
										{% include 'elements/get-button.html.twig' with {
											'url':  path('contenttype.edit', {'id': contentType.id}),
											'label': 'Edit',
											'icon': 'pencil'
										}%}
										{% include 'elements/post-button.html.twig' with {
											'url': path('contenttype.delete', {'id': contentType.id}),
											'message': 'Delete the content type ' ~ contentType.name|humanize ~ ' ?',
											'label': 'Delete',
											'icon': 'trash'
										}%}
				                    </div>
								
              
								</td>
						{# 								<td>{{ environment.index }}</td>#}
{# 								<td>{{ environment.total|number_format }}</td>#}
{# 								<td>#}
{# 								{% include 'elements/post-link.html.twig' with {#}
{# 									'url': path('environment.delete', {'id': environment.id}),#}
{# 									'message': 'Delete the environment ' ~ environment.name|humanize ~ ' ?',#}
{# 									'label': '<i class="fa fa-trash"></i> Delete'#}
{# 								}%}#}
								
{# 								<a href="{{ path('index.switch', {'id': environment.id}) }}">#}
{# 									<i class="fa fa-share-square-o"></i> Switch									#}
{# 								</a>#}
{# 								</td>#}
							</tr>
						{% endfor %}
					</tbody>
				</table>

			</div>
			<!-- /.box-body -->
		</div>
	</div>
</div>
{% endblock %} 