{% extends 'base.html.twig' %}

{% block title %}Edit a content type{% endblock %}
{% block pagetitle %}Edit a content type{% endblock %} 

{% block breadcrumb %}
	<ol class="breadcrumb">
		<li><a href="{{ url("contenttype.list") }}"><i class="fa fa-cubes"></i> Content Types`</a></li>
   		<li class="active">edit</li>
   	</ol>
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-md-12">
			<div class="box ">
				<div class="box-header with-border">
					<i class="fa fa-sitemap"></i>
					<h3 class="box-title">{{ contentType.name|humanize }}</h3>
				</div>
				<!-- /.box-header -->
				{% form_theme form 'form/fields.html.twig' %}	
				{{ form_start(form) }}
				<div class="box-body">
					<div class="col-md-4">
						{{ form_row(form.active) }}
						{{ form_row(form.rootContentType) }}
						{{ form_row(form.pluralName) }}
						{{ form_row(form.icon) }}
						{{ form_row(form.color) }}
						{{ form_row(form.orderKey) }}
						{{ form_row(form.labelField) }}
						{{ form_row(form.parentField) }}
						{{ form_row(form.categoryField) }}
						{{ form_row(form.userField) }}
						{{ form_row(form.dateField) }}
						{{ form_row(form.startDateField) }}
						{{ form_row(form.endDateField) }}
						{{ form_row(form.locationField) }}
						{{ form_row(form.ouuidField) }}
						{{ form_row(form.imageField) }}
						{{ form_row(form.videoField) }}
					</div>
					
					<div class="col-md-8">
						{{ form_row(form.description) }}
						{{ form_row(form.indexTwig) }}
					</div>
										
				</div>
				<!-- /.box-body -->
				<div class="box-footer">
					<div class="btn-group pull-right">
						{{ form_widget(form.save) }}
					</div>
				</div>		
				{{ form_end(form) }}	
			</div>
		</div>
	</div>

{% endblock %} 

{% block javascripts %}
	{% include 'app/menu.html.twig' with {
		'item':  'contenttype-list'
	}%}
{% endblock %}	
