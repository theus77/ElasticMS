

<div class="row">

<div class="col-md-6 col-md-offset-3">

          <!-- Profile Image -->
          <div class="box box-primary">
            <div class="box-body box-profile">
	            <a href="https://www.gravatar.com/emails" target="_blank">
	              <img class="profile-user-img img-responsive img-circle" src="http://www.gravatar.com/avatar/{{ app.user.email|lower|md5 }}?d={{ "http://www.gravatar.com/avatar"|url_encode }}" alt="User profile picture">
	            </a>

              <h3 class="profile-username text-center">{{ user.displayName }}</h3>

              <p class="text-muted text-center">{{ user.username }}</p>

              <ul class="list-group list-group-unbordered">
                <li class="list-group-item">
                  <b>Login</b> <i class="pull-right">{{ user.username }}</i>
                </li>
                <li class="list-group-item">
                  <b>Display name</b> <i class="pull-right">{{ user.displayName }}</i>
                </li>
                <li class="list-group-item">
                  <b>Email</b> <i class="pull-right">{{ user.email }}</i>
                </li>
                <li class="list-group-item">
                  <b>Circles</b> 
                  <a class="btn btn-sm">&nbsp;</a>
                  <i class="pull-right">
                  	{% for circle in user.circles  %}
                  		{{ circle|data_link|raw }}
                  	{% endfor %}
				  </i>
                </li>
                <li class="list-group-item">
                  <b>Roles</b> 
                  <a class="btn btn-sm">&nbsp;</a>
                  <i class="pull-right">
                  	{% for role in user.roles  %}
                  		{% if not loop.first and not loop.last %},{% endif %}
                  		{% if not loop.first and loop.last %}&amp;{% endif %}
                  		{{ role|i18n }}
                  	{% endfor %}
				  </i>
                </li>
                <li class="list-group-item">
                  <b>WYSIWYG</b> <i class="pull-right">{{ user.wysiwygProfile|humanize }}</i>
                </li>
              </ul>

				<div class="btn-group">
	              <a href="{{ url('fos_user_profile_edit') }}" class="btn btn-primary"><i class="fa fa-pencil"></i> <b>Edit</b></a>
	              <a href="{{ url('fos_user_change_password') }}" class="btn btn-primary"><i class="fa fa-lock"></i> <b>Change password</b></a>
				</div>
              
              
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

        </div>
</div>